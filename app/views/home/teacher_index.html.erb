<div class="container-fluid" style="height: 100vh;">
  <div class="row">
    <div class="col-2 profile"  >
      <div class='card card-profile text-center mt-3' >
        <div class='card-block' style="background-color: #563d7c">
          <img alt='' class='card-img-profile' src='https://png.pngtree.com/element_origin_min_pic/16/08/28/1157c25b04bc51f.jpg' width="140">
          <h4 class='card-title'  style="color: white">
            <%= current_user.name%><br/>
            <small><%#= current_user.classroom.grade%></small>
          </h4>
          <div class='card-links'>
            <a class='fa fa-dribbble' href='#' style="color: white"></a>
            <a class='fa fa-twitter' href='#' style="color: white"></a>
            <a class='fa fa-facebook' href='#' style="color: white"></a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6" style="background-color:white ">
      <%if flash[:notice]%>
        <div class="alert alert-primary" role="alert">
         <%= flash[:notice]%>
        </div>
      <%end%>
      <%if flash[:error]%>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error]%>
      </div>
      <%end%>
      <% @subjects.each do |subject|%>
        <% subject.questions.each do |question|%>
          <div class="card question">
            <div class="card-header">
              <label class="pull-left"><%= question.subject.name%></label>
              <label class="pull-right"> Answer: <%= question.answer.nil? ? 'Not Given' : 'Given'%></label>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=question.title%></h5>
              <p class="card-text"><%= question.body%></p>
              <a href="/question/<%= question.id%>" class="btn btn-primary pull-right">view</a>
            </div>
          </div>
        <%end%>  
      <%end%>
    </div>
    <div class="col-4" style="padding-right: 0px;">
    </div>
    
  </div>
</div>

